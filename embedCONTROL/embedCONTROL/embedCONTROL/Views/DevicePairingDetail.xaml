<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="embedCONTROL.Views.DevicePairingDetail"
             BackgroundColor="Transparent">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10">
            <Label Text="In order to communicate between devices, you first need to store your name and ID on the device, we call this process pairing."/>
            <Label Text="Before proceeding, make sure you have the device you want to connect to within reach, as once you send the request, you'll need to accept the request on the device"/>
            <Label Text="One ready, press the [start pairing] button below"/>
            <Button Text="Start Pairing" x:Name="PairingButton" Clicked="PairingButton_OnClicked"/>
            <Label Padding="0, 20, 0, 0"  Text="Pairing Status:"/>
            <Label FontAttributes="Bold" Text="Not yet started" x:Name="PairingStatusField"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>