<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:embedCONTROL.Views;assembly=embedCONTROL"
             x:Class="embedCONTROL.Views.WelcomeSplashDetail"
             Title="embedCONTROL" BackgroundColor="Transparent" x:DataType="views:WelcomeSplashDetail">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Image Grid.Row="1" Grid.Column="1" Source="large_icon.png"/>
            <Label HorizontalTextAlignment="Center" FontSize="14" FontAttributes="Bold"
                   Text="{Binding ApplicationName}"/>
            <Label HorizontalTextAlignment="Center" Text="If you are new to embedCONTROL check out the documentation link below for the quick start guide"/>
            <Button Text="See Documentation" Clicked="DocumentationButtonClicked"/>
            <Label HorizontalTextAlignment="Center" Text="To create a new connection, from the menu select 'New Connection', there's even a simulator option to try it out without a device."/>

            <Label Padding="0, 25, 0, 0" FontSize="20"  FontAttributes="Bold" HorizontalTextAlignment="Center" 
                   Text="BETA version - This product is for evaluation purposes only, please report any issues in our forum"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>